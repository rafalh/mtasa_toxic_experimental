<!--
	lx - odleglosc od lewej krawedzi
	cx - odleglosc od centrum
	rx - odleglosc od prawej krawedzi
	w - szerokosc
	ty -odleglosc od gornej krawedzi
	cy - odleglosc od centrum
	by - odleglosc od dolnej krawedzi
	h - wysokosc
-->
<gui>
	<window id="loginWnd" title="Login" w="280" h="260" cx="0" cy="0" sizeable="false">
		<image cx="0" ty="25" w="64" h="64" src="img/login.png" />
		
		<label id="info" lx="10" rx="10" ty="90" h="15" text="Please login to save your statistics" align="center" />
		
		<label lx="30" ty="125" w="80" h="15" text="Username:" />
		<edit id="name" lx="120" ty="120" w="100" h="25" maxlen="128" focus="true" defbtn="logBtn" />
		
		<label lx="30" ty="155" w="80" h="15" text="Password:" />
		<edit id="pw" lx="120" ty="150" w="100" h="25" maxlen="128" masked="true" defbtn="logBtn" />
		
		<checkbox id="remember" lx="80" ty="180" w="100" h="25" text="Remember me" enabled="false" />
		
		<button id="logBtn" cx="-90" ty="220" w="80" h="25" text="Login" />
		<button id="regBtn" cx="0" ty="220" w="80" h="25" text="Register" />
		<button id="guestBtn" cx="90" ty="220" w="80" h="25" text="Play as guest" />
	</window>
	
	<window id="registerWnd" title="Register" w="280" h="260" cx="0" cy="0" sizeable="false">
		<image cx="0" ty="25" w="64" h="64" src="img/register.png" />
		
		<label id="info" lx="10" rx="10" ty="90" h="15" text="Register new account" align="center" />
		
		<label lx="30" ty="125" w="80" h="15" text="Username:" />
		<edit id="name" lx="120" ty="120" w="100" h="25" maxlen="128" focus="true" />
		
		<label lx="30" ty="155" w="80" h="15" text="Password:" />
		<edit id="pw" lx="120" ty="150" w="100" h="25" maxlen="128" masked="true" />
		
		<label lx="30" ty="185" w="80" h="15" text="Retry password:" />
		<edit id="pw2" lx="120" ty="180" w="100" h="25" maxlen="128" masked="true" />
		
		<button id="regBtn" cx="-85" ty="220" w="80" h="25" text="Register" />
		<button id="backBtn" cx="85" ty="220" w="80" h="25" text="Back" />
	</window>
</gui>
